// Operation
query ExampleQuery($id: ID!) {
  game(id: $id) {
    platform
    id,title
  }
}

//Variable

{
  "id":"3"
}

// Response

{
  "data": {
    "game": {
      "platform": [
        "Switch"
      ],
      "id": "1",
      "title": "Zelda, Tears of the Kingdom"
    }
  }
}

// Operation

query ExampleQuery($id: ID!) {
  author(id: $id) {
    name
    id,verified
  }
}
//Variable

{
  "id":"1"
}

// Response
{
  "data": {
    "author": {
      "name": "mario",
      "id": "1",
      "verified": true
    }
  }
}

