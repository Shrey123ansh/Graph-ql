// Operation
query ExampleQuery($id: ID!) {
  game(id: $id) {
    platform
    id,title
  }
}

//Variable

{
  "id":"3"
}

// Response

{
  "data": {
    "game": {
      "platform": [
        "Switch"
      ],
      "id": "1",
      "title": "Zelda, Tears of the Kingdom"
    }
  }
}

// Operation

query ExampleQuery($id: ID!) {
  author(id: $id) {
    name
    id,verified
  }
}
//Variable

{
  "id":"1"
}

// Response
{
  "data": {
    "author": {
      "name": "mario",
      "id": "1",
      "verified": true
    }
  }
}


// Operation

query ExampleQuery($id: ID!) {
  game(id: $id) {
    title,
    platform,
    reviews {
      rating,
      content
    }
  }
}
//Variable

{
  "id":"3"
}

// Response
{
  "data": {
    "game": {
      "title": "Elden Ring",
      "platform": [
        "PS5",
        "Xbox",
        "PC"
      ],
      "reviews": [
        {
          "rating": 7,
          "content": "lorem ipsum"
        }
      ]
    }
  }
}

// Operation

query ExampleQuery($id: ID!) {
  review(id: $id) {
    rating,
   game {
      title,
      platform
    },
    author {
      name,
      verified
    }
  }
}
//Variable

{
  "id":"3"
}

// Response
{
  "data": {
    "review": {
      "rating": 7,
      "game": {
        "title": "Elden Ring",
        "platform": [
          "PS5",
          "Xbox",
          "PC"
        ]
      },
      "author": {
        "name": "peach",
        "verified": true
      }
    }
  }
}

// Operation

query ExampleQuery($id: ID!) {
  review(id: $id) {
    rating,
   game {
      title,
      reviews {
        rating
      }
    },
   
  }
}
//Variable

{
  "id":"3"
}

// Response
{
  "data": {
    "review": {
      "rating": 7,
      "game": {
        "title": "Elden Ring",
        "reviews": [
          {
            "rating": 7
          }
        ]
      }
    }
  }
}
